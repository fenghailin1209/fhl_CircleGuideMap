<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fhl="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5ee"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:gravity="center" >

<!--             android:background="@color/pop_click_color" -->
        <com.fhl.customwidget.view.GuideMapViewGroup2
            android:id="@+id/vg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fhl:ArrowsWidth="10dip"
            fhl:MeanItemWidth="70dip"
            fhl:PaintColor="@color/orange"
            fhl:PaintWidth="5" >
        </com.fhl.customwidget.view.GuideMapViewGroup2>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#e0e0e0" />

    <LinearLayout
        android:id="@+id/id_bind_ll"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:background="@drawable/jgyw_bind" />

        <TextView
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定机动车和驾驶证" />
    </LinearLayout>

</LinearLayout>